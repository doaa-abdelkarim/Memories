<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/image_view_memory_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/content_desc_memory_photo" />

    <ImageView
        android:id="@+id/image_view_delete"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginStart="-48dp"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@id/image_view_memory_photo"
        android:contentDescription="@string/content_desc_delete"
        android:src="@drawable/ic_delete" />

</RelativeLayout>


